{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./electron-dist",
    "rootDir": "./electron",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": false,
    "lib": ["ES2022"]
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist", "electron-dist", "src"]
}

